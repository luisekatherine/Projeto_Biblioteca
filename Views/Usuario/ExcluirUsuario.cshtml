@Model Usuario

<h1>Esta exclusão é irreversível</h1>
<h2>Tem certeza que deseja excluir o usuário @Model.Login ?</h2>

<form action="ExcluirUsuario" method="post">
    <input type="hidden" name="id" value="@Model.Id">
    <input name="decisao" type ="submit" value="CANCELAR">
    <input name="decisao" type ="submit" value="EXCLUIR">
</form>